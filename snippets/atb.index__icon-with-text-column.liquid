<section id="shopify-section-{{section_id}}" class="shopify-section icon-with-text-column">
{% comment %}
** Icon with text column - dynamic **
- Draggable section
- Uses blocks
{% endcomment %}

{% assign id = section_id %}
{% comment %}Colors{% endcomment %}
{% assign text_color = atb_text_color %}
{% assign icon_color = atb_icon_color %}
{% assign background = atb_background %}
{% assign gradient = atb_gradient %}
{% assign gradient_rotation = atb_gradient_rotation %}
{% comment %}Layout{% endcomment %}
{% assign show_gutter = atb_show_gutter %}
{% assign width = atb_width %}
{% assign padding_top = atb_padding_top %}
{% assign padding_bottom = atb_padding_bottom %}
{% assign padding_left = atb_padding_left %}
{% assign padding_right = atb_padding_right %}
{% assign animation = atb_animation %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = atb_css_class %}
{% assign custom_css = atb_custom_css %}

{% comment %} Is the color set to transparent? {% endcomment %}
{% assign text_alpha = text_color | color_extract: 'alpha' %}
{% assign icon_alpha = icon_color | color_extract: 'alpha' %}
{% assign background_alpha = background | color_extract: 'alpha' %}
{% assign gradient_alpha = gradient | color_extract: 'alpha' %}

{% comment %} Section specific CSS {% endcomment %}
{% capture section_css -%}

  .icon-with-text-column__column {
    background-image: linear-gradient({{ gradient_rotation }}deg, transparent, {{ gradient }});
    background-color: {%- if background_alpha != 0 -%}{{ background }}{%- endif -%};
  }

  .icon-column__title {
    color: {%- if text_alpha != 0 -%}{{ atb_text_color }}{%- endif -%};
  }

  .icon {
    fill: {%- if icon_alpha != 0 -%}{{ atb_icon_color }}{%- endif -%};
  }

  .icon-column__text {
    color: {%- if text_alpha != 0 -%}{{ atb_text_color }}{%- endif -%};
  }

{%- endcapture -%}

{% style %}
  #shopify-section-{{ section_id }} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    padding-left: {{ padding_left }}px;
    padding-right: {{ padding_right }}px;
    {% if width == 'wide' %}
      width: 100%;
    {% elsif width == 'half' %}
      width: 50%;
    {% endif %}
  }
  {% include 'atb-css-loop' , css: section_css, id: id  %}
  {% include 'atb-css-loop' , css: custom_css, id: id  %}
{% endstyle %}

<section class="section
                {{ css_class }}
                is-width-{{ width }}
                {% if show_gutter == false %}
                  has-no-side-gutter
                  has-background
                {% else %}
                  has-gutter-enabled
                {% endif %}
                {% if blocks.size > atb_icons_per_row %}
                  has-multirow-blocks
                {% endif %}
                {% if width == 'wide' %}
                  equal-columns--outside-trim
                {% endif %}"
                {% if animation != "none" %}
                  data-scroll-class="{{ animation }}"
                {% endif %}>
  <div class="container is-justify-center">
    {% for block0 in blocks %}
      <div class="icon-with-text-column__column
                  {% if show_gutter %}
                    has-gutter
                  {% endif %}
                  column
                  has-padding
                  {% include 'atb-column-width' , value: atb_icons_per_row  %}
                  text-align-{{ atb_align_text }}
                  medium-down--one-whole">

        {%- capture icon_size -%}
          is-{{ atb_icon_size }}
        {%- endcapture -%}

        {% include settings.icon, name: block_icon_label[forloop.index0], icon_class: icon_size %}

        {% if block_title[forloop.index0] != blank or block_text[forloop.index0] != blank %}
          <div class="icon-column__text ">
            <h3 class="icon-column__title title">{{ block_title[forloop.index0] }}</h3>
            {{ block_text[forloop.index0] }}
          </div>
        {% endif %}

        {% if block_button_label[forloop.index0] != blank %}
          <div class="icon-column__action has-padding-top">
            {% include 'atb-button' , label: block_button_label[forloop.index0], href: block_link[forloop.index0], style: atb_button_style, type: "link"  %}
          </div>
        {% endif %}

      </div>
    {% endfor %}
  </div>
</section>


</section>