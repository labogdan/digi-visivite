{%- include 'atb-render' field:'atb_width' -%}
{%- assign atb_width = val -%}
{%- include 'atb-render' field:'atb_padding_top' -%}
{%- assign atb_padding_top = val -%}
{%- include 'atb-render' field:'atb_padding_bottom' -%}
{%- assign atb_padding_bottom = val -%}
{%- include 'atb-render' field:'atb_padding_left' -%}
{%- assign atb_padding_left = val -%}
{%- include 'atb-render' field:'atb_padding_right' -%}
{%- assign atb_padding_right = val -%}
{%- include 'atb-render' field:'atb_animation' -%}
