<section id="shopify-section-{{section_id}}" class="shopify-section jsSlideshowWithText slideshow-with-text">
{% comment %}
** Slideshow with text - dynamic **
- Draggable section
- Uses blocks
{% endcomment %}

{% assign id = section_id %}
{% assign show_gutter = atb_show_gutter %}
{% assign text_alignment = atb_text_alignment %}
{% assign text_transition = atb_text_transition %}
{% assign show_nav_buttons = atb_show_nav_buttons %}
{% assign image_position = atb_image_position %}
{% comment %} Layout {% endcomment %}
{% assign width = atb_width %}
{% assign padding_top = atb_padding_top %}
{% assign padding_bottom = atb_padding_bottom %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = atb_css_class %}
{% assign custom_css = atb_custom_css %}
{% comment %} Is the color set to transparent? {% endcomment %}
{% assign background_alpha = atb_background_color | color_extract: 'alpha' %}
{% assign text_alpha = atb_text_color | color_extract: 'alpha' %}

{% comment %} Section specific CSS {% endcomment %}

{%- capture section_css -%}

.text-slideshow-column {
  background: {% if background_alpha != 0 %}{{ atb_background_color }}{% else %}{{ settings.shop_bg_color }}{% endif %};
}

.text-slideshow__content .banner__subheading p,
.text-slideshow__content .title {
  color: {% if text_alpha != 0 %}{{ atb_text_color }}{% else %}{{ settings.regular_color }}{% endif %};
}

.flickity-page-dots .dot {
  background: {% if text_alpha != 0 %}{{ atb_text_color }}{% else %}{{ settings.regular_color }}{% endif %};
}

{%- endcapture -%}

{% style %}
  #shopify-section-{{ section_id }} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    {% if width == 'wide' %}
      width: 100%;
    {% endif %}
  }

  {% include 'atb-css-loop' , css: section_css, id: id  %}
  {% include 'atb-css-loop' , css: custom_css, id: id  %}
{% endstyle %}

{% comment %} HTML markup  {% endcomment %}
{% if blocks.size > 0 %}
  <section class="section
        {{ css_class }}
        is-width-{{ width }}
        {% if show_gutter == false %}
          has-no-side-gutter
          has-background
        {% else %}
          has-gutter-enabled
        {% endif %}
        {% if width == 'wide' %}
          equal-columns--outside-trim
        {% endif %}
        ">
  <div class="slideshow-with-text__container container">
    <div class="image-slideshow-column
                three-fifths
                medium-down--one-whole
                column
                image-slideshow-position--{{ image_position }}">
      <div class="image-slideshow image-slideshow--{{ atb_image_transition }}" data-image-slideshow>
        {% for block0 in blocks %}
{%- assign my_image_key0 = block_image[forloop.index0]| split: '/files/' | last -%}
{%- assign my_image0 = images[my_image_key0] -%}
          <div id="shopify-section-{{ blocks[forloop.index0] }}" class="image-slideshow__slide" data-slide-index={{ forloop.index0 }} {{ block.shopify_attributes }}>
            {% if block_button_label[forloop.index0] == blank and block_button_link[forloop.index0] != blank %}
              <a href="{{ block_button_link[forloop.index0] }}">
            {% endif %}
              {% if my_image0 != blank %}
                {% include 'atb-image-element' , image: my_image0, alt: block_image[forloop.index0].alt  %}
              {% else %}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            {% if block_button_label[forloop.index0] == blank and block_button_link[forloop.index0] != blank %}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="text-slideshow-column
                two-fifths
                medium-down--one-whole
                column
                is-align-center
                is-flex-wrap">
      <div class="text-slideshow {% if show_dots == false %} flickity-page-dots--hidden {% endif %}" data-text-slideshow data-slide-index={{ forloop.index0 }} {{ block.shopify_attributes }}>
        {% for block0 in blocks %}
{%- assign my_image_key0 = block_image[forloop.index0]| split: '/files/' | last -%}
{%- assign my_image0 = images[my_image_key0] -%}

        <div id="shopify-section-{{ blocks[forloop.index0] }}" class="text-slideshow__slide
                                                        text-slideshow__slide--{{ blocks[forloop.index0] }}"
                                                        >
            <div class="text-slideshow__content text-align-{{ text_alignment }}">
              {% if block_pretext[forloop.index0] != blank %}
                <div class="text-slideshow__heading banner__subheading">{{ block_pretext[forloop.index0] }}</div>
              {% endif %}
              {% if block_title[forloop.index0] != blank %}
                <h2 class="text-slideshow__heading banner__heading title">{{ block_title[forloop.index0] }}</h2>
              {% endif %}
              {% if block_text[forloop.index0] != blank %}
                <div class="text-slideshow__heading banner__subheading subtitle content">{{ block_text[forloop.index0] }}</div>
              {% endif %}
              {% if block_button_label[forloop.index0] != blank %}
                {% include 'atb-button' , label: block_button_label[forloop.index0], href: block_button_link[forloop.index0], style: atb_button_style, type: "link"  %}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% else %}
  <div class="container has-padding-top has-padding-bottom text-align-center">
    <div class="one-whole column">
      <p>{{ 'homepage.onboarding.no_content' | t }}</p>
    </div>
  </div>
{% endif %}

{% comment %}JavaScript{% endcomment %}
<script
    type="application/json"
    data-section-id="{{ section_id }}"
    data-section-data
  >
  {
    "text_transition": {{ atb_text_transition | json }},
    "image_transition": {{ atb_image_transition | json }},
    "image_slideshow_speed": {{ atb_image_slideshow_speed | json }},
    "show_arrows": {{ atb_show_arrows | json }},
    "show_nav_buttons": {{ atb_show_nav_buttons | json }},
    "number_of_slides": {{ blocks.size | json }}
  }
</script>
<script data-theme-editor-load-script src="{{ 'z__jsSlideshowWithText.js' | asset_url }}"></script>


</section>