          <div class="caption text-align-{{ block_text_horizontal_position[forloop.index0] }}">
            <div class="caption-content text-align-{{ block_text_alignment[forloop.index0] }}">
              {% if block_pretext[forloop.index0] != blank %}
                <div class="slideshow-classic__preheading pretext">
                  {{ block_pretext[forloop.index0] }}
                </div>
              {% endif %}
              {% if block_title[forloop.index0] != blank %}
                <h2 class="slideshow-classic__heading title {% if settings.banner_heading_size > 35 %}mobile-shrink-text{% endif %}">
                  <span>{{ block_title[forloop.index0] }}</span>
                </h2>
              {% endif %}
              {% if block_subtitle[forloop.index0] != blank %}
                <div class="slideshow-classic__subheading subtitle">
                  {{ block_subtitle[forloop.index0] }}
                </div>
              {% endif %}
              {% if block_button_1[forloop.index0] != blank or block_button_2[forloop.index0] != blank %}
