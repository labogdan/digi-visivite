<section id="shopify-section-{{section_id}}" class="shopify-section jsSlideshowClassic slideshow-section under-menu">
{% comment %}
** Slideshow classic - dynamic **
- Draggable section
- Uses blocks
{% endcomment %}

{% comment %} Advanced {% endcomment %}
{% assign css_class = atb_css_class %}
{% assign custom_css = atb_custom_css %}

{% comment %} Section specific CSS {% endcomment %}

{% style %}
  {% include 'atb-css-loop' , css: section_css, id: id  %}

  #shopify-section-{{ section_id }} {
    padding-top: {{ atb_padding_top }}px;
    padding-bottom: {{ atb_padding_bottom }}px;
    {% if atb_width == 'wide' %}
      width: 100%;
    {% endif %}
  }

  {% include 'atb-css-loop' , css: custom_css, id: section_id  %}

{% endstyle %}

{% comment %} HTML markup {% endcomment %}
<section class="section
                {{ css_class }}
                is-width-{{ atb_width }}
                under-overlay-menu
                mobile-text-under-{{ atb_mobile_text_below_image }}
                "
                {% if atb_animation != "none" %}
                  data-scroll-class="{{ atb_animation }}"
                {% endif %}>
  <div class="slideshow-classic image-slideshow image-slideshow--{{ atb_image_transition }} page-dots--{{ atb_show_nav_buttons }}" data-slideshow-classic>
    {% for block0 in blocks %}
{%- assign my_range2 = block_text_width[forloop.index0] | plus: 0 -%}
{%- assign my_range1 = block_border_width[forloop.index0] | plus: 0 -%}
{%- assign my_range0 = block_background_opacity[forloop.index0] | plus: 0 -%}
{%- assign my_image_key1 = block_mobile_image[forloop.index0]| split: '/files/' | last -%}
{%- assign my_image1 = images[my_image_key1] -%}
{%- assign my_image_key0 = block_image[forloop.index0]| split: '/files/' | last -%}
{%- assign my_image0 = images[my_image_key0] -%}

      <div id="shopify-section-{{ blocks[forloop.index0] }}" class="gallery-cell image-slideshow__slide slideshow-classic__banner text-below-image--{{ atb_mobile_text_below_image }} image-crop-{{ block_mobile_image_crop[forloop.index0] }} is-flex is-align-center" {{ block.shopify_attributes }} data-slide-index={{ forloop.index0 }}>

        {% assign background_color_alpha = my_range0 | divided_by: 100.00 %}
        {% assign heading_alpha = block_heading_color[forloop.index0] | color_extract: 'alpha' %}
        {% assign preheading_alpha = block_pretext_color[forloop.index0] | color_extract: 'alpha' %}
        {% assign subheading_alpha = block_subheading_color[forloop.index0] | color_extract: 'alpha' %}
        {% assign caption_border_alpha = block_border_color[forloop.index0] | color_extract: 'alpha' %}
        {% assign mobile_headline_alpha = block_heading_color_mobile[forloop.index0] | color_extract: 'alpha' %}
        {% assign mobile_preheading_alpha = block_pretext_color_mobile[forloop.index0] | color_extract: 'alpha' %}
        {% assign mobile_subtitle_alpha = block_subheading_color_mobile[forloop.index0] | color_extract: 'alpha' %}
        {% assign caption_background_alpha = block_background_color[forloop.index0] | color_extract: 'alpha' %}

        {% if block_button_1[forloop.index0] != blank and block_button_2[forloop.index0] != blank %}
          {% assign buttons = true %}
        {% else %}
          {% assign buttons = false %}
        {% endif %}

        {% style -%}
          #shopify-section-{{ blocks[forloop.index0] }} .caption-content {
            background-color: {% if caption_background_alpha != 0 %}{% if background_color_alpha != 100  %}{{ block_background_color[forloop.index0] | color_modify: 'alpha', background_color_alpha }}{% else %}{{ block_background_color[forloop.index0] }}{% endif %}{% else %}rgba(0,0,0,0){% endif %};
            border: {{ my_range1 }}px solid {{ block_border_color[forloop.index0] }};
          }

          #shopify-section-{{ blocks[forloop.index0] }} .slideshow-classic__heading {
            color: {% if heading_alpha != 0 %}{{ block_heading_color[forloop.index0] }}{% else %}{{ settings.heading_color }}{% endif %};
          }

          #shopify-section-{{ blocks[forloop.index0] }} .slideshow-classic__preheading {
            color: {% if preheading_alpha != 0 %}{{ block_pretext_color[forloop.index0] }}{% else %}{{ settings.heading_color }}{% endif %};
          }

          #shopify-section-{{ blocks[forloop.index0] }} .slideshow-classic__subheading {
            color: {% if subheading_alpha != 0 %}{{ block_subheading_color[forloop.index0] }}{% else %}{{ settings.heading_color }}{% endif %};
          }

          @media only screen and (min-width: 480px) {
            #shopify-section-{{ blocks[forloop.index0] }} .caption-content {
              width: {{ my_range2 }}%;
            }
          }

          @media only screen and (max-width: 480px) {
            #shopify-section-{{ blocks[forloop.index0] }}  .slideshow-classic__heading {
              color: {% if mobile_headline_alpha != 0 %}{{ block_heading_color_mobile[forloop.index0]}}{% endif %};
            }
            #shopify-section-{{ blocks[forloop.index0] }}  .slideshow-classic__preheading {
              color: {% if mobile_preheading_alpha != 0 %}{{ block_pretext_color_mobile[forloop.index0]}}{% endif %};
            }
            #shopify-section-{{ blocks[forloop.index0] }}  .slideshow-classic__subheading {
              color: {% if mobile_subtitle_alpha != 0 %}{{ block_subheading_color_mobile[forloop.index0]}}{% endif %};
            }
          }
        {%- endstyle -%}

        {% if my_image1 != blank %}
          {% assign hide_mobile = 'is-hidden-mobile-only' %}
        {% endif %}

        {% if my_image0 != blank %}
          {% include 'atb-image-element' , image: my_image0, alt: block_image[forloop.index0].alt, stretch_width: true, additional_classes: hide_mobile  %}
        {% else %}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
